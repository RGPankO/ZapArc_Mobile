{
  "name": "zap-arc-mobile",
  "version": "1.0.0",
  "description": "Cross-platform mobile wallet for Zap-Arc using Breez SDK Spark",
  "private": true,
  "scripts": {
    "postinstall": "cd mobile-app && npm install",
    "setup": "npm run setup:mobile",
    "setup:mobile": "cd mobile-app && npm install",
    "dev": "npm run dev:mobile",
    "dev:mobile": "cd mobile-app && npm start",
    "test": "npm run test:mobile",
    "test:mobile": "cd mobile-app && npm test",
    "clean": "npm run clean:mobile",
    "clean:mobile": "cd mobile-app && rm -rf node_modules && rm -rf .expo"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "react-native",
    "expo",
    "lightning-network",
    "bitcoin",
    "mobile-wallet",
    "breez-sdk-spark",
    "typescript"
  ],
  "author": "Zap-Arc Team",
  "license": "MIT",
  "dependencies": {
    "expo": "^54.0.31",
    "expo-dev-client": "~6.0.20"
  }
}
